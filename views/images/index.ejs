
<div class="container">
  <div class="columns is-multiline is-mobile">
    <div class="column is-one-third ">
  <img class="profilePic" src=<%= locals.user.imageUrl %>>
</div>
<div class="column is-two-thirds">
  <h1 class="is-size-2 has-text-black"><%= locals.user.username %></h1>
  <button class="button">Edit Profile</button>
</div>
</div>
  <div class="columns is-multiline is-mobile">
    <%# TODO: add a userSchema.methods.createdImages(). The model should fetch its own images! %>
  <% images.filter(image => image.createdBy.id === locals.user.id).forEach(image => { %>
    <div class="column is-one-third-mobile is-one-third-tablet is-one-third-desktop">
    <a href="/images/<%= image.id %>">
    <img class="images" src=<%= image.image %> >
    </a>
    </div>
    <% }) %>
  </div>
</div>
