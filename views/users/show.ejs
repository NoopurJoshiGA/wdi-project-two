
<div class="container">
  <div class="columns is-multiline is-mobile">
    <div class="column is-one-quarter-desktop">
      <img class="profilePic" src="<%= user.imageUrl %>">
    </div>
    <div class="column">
      <h1 class="is-size-2 has-text-black"><%= user.username %></h1>
      <% if(locals.loggedInUser.id === user.id && locals.isLoggedIn) { %>
        <a href="/users/<%=user.id %>/edit" class="button is-medium">Edit Profile</a>
      <% } %>
    </div>
  </div>
  <div class="columns is-mobile">
    <div class="column is-12">
      <p class="is-size-4 has-text-black"><%=user.fullName%></p>
      <p><%= user.description %></p>
    </div>
  </div>
  <div class="level is-mobile">
    <div class="level-item has-text-centered">
    <div>
      <p class="title"><%=photos.length%></p>
      <p class="heading">Posts</p>
    </div>
  </div>
  <div class="level-item has-text-centered">
    <div>
      <p class="title">0</p>
      <p class="heading">Following</p>
    </div>
  </div>
  <div class="level-item has-text-centered">
    <div>
      <p class="title">0</p>
      <p class="heading">Followers</p>
    </div>
  </div>
  </div>
  <div class="columns is-gapless is-multiline is-mobile">
    <% photos.forEach(image => { %>
      <div class="column is-one-third-mobile is-one-third-tablet is-one-third-desktop">
      <a href="/images/<%= image.id %>">
      <figure class="image imageBoard is-square">
      <img class="imageBoard" src=<%= image.image %> >
      <i class="fas fa-heart"></i>
      </figure>
      </a>
      </div>
      <% }) %>
    </div>
  </div>
