<h1>Log In</h1>

<form action="/sessions" method="POST">

  <div class="field">
    <div class="control">
      <input class="input" type="text" placeholder="Email" name="email">
    </div>
  </div>

  <div class="field">
    <div class="control">
      <input class="input" type="password" placeholder="Password" name="password">
    </div>
  </div>
  <button class="button is-info">Login</button>
</form>
